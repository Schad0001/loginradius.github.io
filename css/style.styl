// for animations
bezier = cubic-bezier(0.51, 0.01, 0.52, 0.99)

// Base font for the function im creating
base-font = 16px

font-size(sizeValue = 16, line = sizeValue * 1.875)
	font-size (sizeValue)px
	line-height (line)px
	font-size (sizeValue / 16)rem
	line-height (line / 16)rem
	
user-select()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	
box-sizing()
	-moz-box-sizing border-box
	-ms-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
	
transition-basic()
	-webkit-transition all 300ms ease-in-out
	-ms-transition all 300ms ease-in-out
	transition all 300ms ease-in-out
	
transition-cubic()
	-webkit-transition all 0.5s cubic-bezier(0.51, 0.01, 0.52, 0.99)
	-ms-transition all 0.5s cubic-bezier(0.51, 0.01, 0.52, 0.99)
	transition all 0.5s cubic-bezier(0.51, 0.01, 0.52, 0.99)
	
transition()
	-webkit-transition arguments
	-ms-transition arguments
	transition arguments
	
translate()
	-webkit-transform translate(arguments)
	-moz-transform translate(arguments)
	transform translate(arguments)
	
transform()
	-webkit-transform arguments
	-moz-transform arguments
	transform arguments




